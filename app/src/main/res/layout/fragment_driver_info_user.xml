<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/et_first_name"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_12"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/persona_driver_info_hint_first_name"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <EditText
                android:id="@+id/et_last_name"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/persona_driver_info_hint_last_name"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/et_first_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <EditText
                android:id="@+id/et_patronymic_name"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/persona_driver_info_hint_patronymic_name"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/et_last_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <EditText
                android:id="@+id/et_date_birthday"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_12"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/driver_info_date_birthday"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_patronymic_name" />


        <EditText
                android:id="@+id/et_residence_address"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/driver_info_residence_address"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/et_date_birthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <EditText
                android:id="@+id/et_zip_code"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/driver_info_zip_code"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/et_residence_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <EditText
                android:id="@+id/et_number"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/insurance_info_hint_number"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/et_zip_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <EditText
                android:id="@+id/et_country_registration"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"
                android:ems="@dimen/default_text_size_14"
                android:hint="@string/driver_info_country"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/et_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <EditText
                android:id="@+id/et_number_license"
                style="@style/EditTextStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="@dimen/default_text_size_14"
                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"

                android:hint="@string/driver_info_number_license"

                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_country_registration" />

        <EditText
                android:id="@+id/et_series_license"
                style="@style/EditTextStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="@dimen/default_text_size_14"

                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"

                android:hint="@string/driver_info_series_license"

                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_number_license" />

        <EditText
                android:id="@+id/et_valid_finish_date"
                style="@style/EditTextStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="@dimen/default_text_size_14"

                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"

                android:hint="@string/driver_info_valid_finish_date"

                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_series_license" />

        <EditText
                android:id="@+id/et_category_license"
                style="@style/EditTextStyle"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="@dimen/default_text_size_14"

                android:layout_marginStart="@dimen/default_margin_48"
                android:layout_marginEnd="@dimen/default_margin_48"
                android:layout_marginTop="@dimen/default_margin_12"

                android:hint="@string/driver_info_category_license"

                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_valid_finish_date" />

        <CheckBox
                android:id="@+id/switch_is_voluntary"

                style="@style/OrangeTextView"
                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/default_margin_12"
                android:layout_marginBottom="@dimen/default_margin_12"

                android:text="@string/driver_info_title_text_check_box"
                app:layout_constraintBottom_toTopOf="@+id/next_button"
                app:layout_constraintEnd_toEndOf="@+id/et_category_license"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_category_license"
                app:layout_constraintTop_toBottomOf="@+id/et_category_license" />

        <Button
                android:id="@+id/next_button"
                style="@style/NextButtonStyle"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_next"

                android:layout_marginTop="@dimen/default_margin_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
