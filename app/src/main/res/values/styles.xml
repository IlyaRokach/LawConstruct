<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/editTextColor</item>
        <item name="colorControlActivated">@color/baseColor</item>
        <item name="colorControlHighlight">@color/baseColor</item>
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle" parent="BaseTextStyle">
        <item name="android:textColorHint">@color/editTextColor</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>

    <style name="EditTextStyleMenuItem" parent="BaseTextStyle">
        <item name="android:padding">@dimen/default_margin_16</item>
        <item name="android:textColorHint">@color/editTextColor</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:layout_margin">@dimen/default_margin_16</item>
        <item name="android:background">@drawable/layout_blue_bg</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/baseColor</item>
    </style>

    <style name="BaseMarginButtonStyle">
        <item name="android:layout_marginBottom">@dimen/default_margin_16</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_16</item>
        <item name="android:layout_marginStart">@dimen/default_margin_16</item>
    </style>

    <style name="NextButtonStyle" parent="BaseMarginButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/layout_blue_bg</item>
    </style>

    <style name="OrangeTextView" parent="BaseTextStyle">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="GreyTextView" parent="BaseTextStyle">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextViewRadioButtonStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LinearLayoutStyleRadioButtonGroup">
        <item name="android:layout_margin">@dimen/default_margin_16</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/holo_green_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
</resources>
